{
    "name": "mark",
    "displayName": "Mark Language Support",
    "description": "Mark language support for VS Code",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.40.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "contributes": {
        "languages": [
            {
                "id": "mark",
                "aliases": [
                    "Mark",
                    "mark"
                ],
                "extensions": [
                    ".mark"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "mark",
                "scopeName": "source.mark",
                "path": "./syntaxes/mark.tmLanguage.json"
            }
        ],
        "snippets": [
            {
                "language": "mark",
                "path": "./snippets/snippets.code-snippets"
            }
        ]
    }
}
